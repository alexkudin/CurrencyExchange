<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="com.example.alex.converter.MainActivity"
    android:orientation="vertical"
    android:layout_column="2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Конвертер валют"
            android:gravity="center"
            android:textSize="22dp"
            android:textColor="#000000"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="0dp"/>

        <TableRow>
            <TextView
                android:layout_column="0"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Введите сумму : "
                android:textSize="20dp"
                android:textColor="#7c7c7c"/>
            <EditText
                android:layout_column="1"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:background="#e1e1e1"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="24dp"
                android:id="@+id/sumIn"
                android:layout_marginBottom="2dp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_column="0"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Результат : "
                android:textSize="20dp"
                android:textColor="#7c7c7c"/>
            <TextView
                android:layout_column="1"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#e1e1e1"
                android:textColor="#000000"
                android:textSize="24dp"
                android:gravity="center"
                android:id="@+id/sumOut"
                android:layout_marginBottom="2dp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_column="0"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Выберите валюту : "
                android:layout_gravity="center_vertical"
                android:textSize="20dp"
                android:textColor="#7c7c7c"/>
            <Spinner
                android:layout_column="1"
                android:layout_weight="1"
                android:layout_height="36dp"
                android:id="@+id/CurrencyFromSpinner"
                android:textColor="#000000"
                android:layout_marginBottom="2dp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_column="0"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Конвертировать в : "
                android:gravity="left"
                android:layout_gravity="center_vertical"
                android:textSize="20dp"
                android:textColor="#7c7c7c"/>
            <Spinner
                android:layout_column="1"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:id="@+id/CurrencyToSpinner"
                android:textColor="#000000"
                android:layout_marginBottom="2dp"/>
        </TableRow>
        <TableRow>
            <RadioGroup
                android:layout_column="0"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="0dp"
                android:id="@+id/rg">
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="НБУ"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:id="@+id/nbu"
                    android:onClick="checkBoxClick"/>
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Покупка"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:id="@+id/pokupka"
                    android:onClick="checkBoxClick"/>
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Продажа"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:id="@+id/prodazha"
                    android:onClick="checkBoxClick"/>
            </RadioGroup>

            <EditText
                android:layout_marginTop="28dp"
                android:layout_weight="1"
                android:layout_column="1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#e1e1e1"
                android:textColor="#000000"
                android:textSize="24dp"
                android:gravity="center"
                android:id="@+id/course"
                />
        </TableRow>
            <Button
                android:layout_width="300dp"
                android:layout_height="32dp"
                android:background="#e1e1e1"
                android:textColor="#000000"
                android:textSize="20dp"
                android:id="@+id/execute"
                android:text="Рассчитать"
                android:layout_marginTop="0dp"
                android:onClick="btnClick"/>

</TableLayout>
