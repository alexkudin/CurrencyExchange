<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="com.example.alex.converter.MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Конвертер валют"
        android:layout_gravity="center"
        android:textSize="28dp"
        android:textColor="#000000"
        android:layout_marginBottom="6dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Введите сумму : "
        android:layout_gravity="left"
        android:textSize="20dp"
        android:textColor="#7c7c7c"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="#e1e1e1"
        android:textColor="#000000"
        android:textSize="24dp"
        android:gravity="center"
        android:id="@+id/sumIn"

        android:layout_marginBottom="8dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Результат : "
        android:layout_gravity="left"
        android:textSize="20dp"
        android:textColor="#7c7c7c"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="#e1e1e1"
        android:textColor="#000000"
        android:textSize="24dp"
        android:gravity="center"
        android:id="@+id/sumOut"
        android:layout_marginBottom="8dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Выберите валюту : "
        android:layout_gravity="left"
        android:textSize="20dp"
        android:textColor="#7c7c7c"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:id="@+id/CurrencyFromSpinner"
        android:textColor="#000000"
        android:layout_marginBottom="8dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Конвертировать в : "
        android:layout_gravity="left"
        android:textSize="20dp"
        android:textColor="#7c7c7c"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:id="@+id/CurrencyToSpinner"
        android:textColor="#000000"
        android:layout_marginBottom="8dp"/>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:layout_marginBottom="8dp"
        android:id="@+id/rg">
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="НБУ"
            android:textColor="#000000"
            android:textSize="20dp"
            android:id="@+id/nbu"
            android:onClick="checkBoxClick"/>
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Покупка"
            android:textColor="#000000"
            android:textSize="20dp"
            android:id="@+id/pokupka"
            android:onClick="checkBoxClick"/>
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Продажа"
            android:textColor="#000000"
            android:textSize="20dp"
            android:id="@+id/prodazha"
            android:onClick="checkBoxClick"/>

    </RadioGroup>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="#e1e1e1"
        android:textColor="#000000"
        android:textSize="24dp"
        android:gravity="center"
        android:id="@+id/course"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#e1e1e1"
        android:textColor="#000000"
        android:textSize="22dp"
        android:gravity="center"
        android:id="@+id/execute"
        android:text="Рассчитать"
        android:layout_marginTop="12dp"
        android:onClick="btnClick"/>



</LinearLayout>
